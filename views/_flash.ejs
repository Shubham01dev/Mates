<% if (flash.success && flash.success.length > 0) {%>
    new Noty({
        theme: "relax",
        type: 'success',
        layout: 'topRight',
        text: '<%= flash.success %>',
        timeout: 1000
    }).show(); <%}%>
<% if (flash.error && flash.error.length > 0) {%>
    new Noty({
        theme: "relax",
        type: 'error',
        layout: 'topRight',
        text: '<%= flash.error %>',
        timeout: 1000
    }).show(); <%}%>